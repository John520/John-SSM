<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.john.ssm.dao.ProductMapper">
    <select id="findProductById" parameterType="int" resultType="com.john.ssm.bean.Product">
        SELECT *
        FROM PRODUCTS
        WHERE id = #{id}
    </select>
</mapper>